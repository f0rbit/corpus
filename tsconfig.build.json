{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "cloudflare.ts",
    "file.ts",
    "core.ts",
    "backends.ts",
    "codecs.ts",
    "types.ts",
    "store.ts",
    "corpus.ts",
    "codec.ts",
    "hash.ts",
    "version.ts",
    "utils.ts",
    "schema.ts",
    "sst.ts",
    "backend/*.ts"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
