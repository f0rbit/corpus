---
import Section from "./Section.astro";

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;

const links = [
  {
    title: "Getting Started",
    description: "Set up your first Corpus project",
    href: `${base}getting-started`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>`,
  },
  {
    title: "Storage Backends",
    description: "Choose the right backend for your use case",
    href: `${base}guides/backends`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M3 5V19A9 3 0 0 0 21 19V5"/><path d="M3 12A9 3 0 0 0 21 12"/></svg>`,
  },
  {
    title: "Observations Guide",
    description: "Extract structured facts from your data",
    href: `${base}guides/observations`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>`,
  },
  {
    title: "API Reference",
    description: "Full API documentation",
    href: `${base}api/core/create-corpus`,
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/><path d="M12 18v-6"/><path d="m9 15 3 3 3-3"/></svg>`,
  },
];
---

<Section title="Next Steps" bordered>
  <div class="links-grid">
    {links.map((link) => (
      <a href={link.href} class="card card-flat card-interactive link-card">
        <div class="link-header">
          <div class="card-icon" set:html={link.icon} />
          <h3 class="card-title">{link.title}</h3>
        </div>
        <p class="card-description">{link.description}</p>
      </a>
    ))}
  </div>
</Section>

<style>
  .links-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
  }

  .link-card {
    text-decoration: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .link-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .link-header .card-icon {
    margin: 0;
  }

  .link-header .card-title {
    margin: 0;
  }

  @media (max-width: 600px) {
    .links-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
